{
  "extends": ["../../tsconfig.base.json"],
  "compilerOptions": {
    "declaration": true,
    "incremental": true,
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "target": "ES2020",
    "lib": ["ES2022"],
    "types": ["node"],
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "composite": true,
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "exclude": ["./dist"]
}
