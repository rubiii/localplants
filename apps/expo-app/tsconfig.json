{
  "extends": ["../../tsconfig.base.json", "expo/tsconfig.base"],
  "compilerOptions": {
    "jsx": "react-native",
    "jsxImportSource": "react",
    "paths": {
      "@assets/*": ["./assets/*"],
      "@/*": ["./src/*"]
    },

    // FIX: This currently causes errors with Jazz
    "exactOptionalPropertyTypes": false
  },
  "references": [
    { "path": "../../packages/jazz" },
    { "path": "../../packages/utils" },
    { "path": "../../packages/theme" }
  ],
  "exclude": ["./src-tauri", "./builds"]
}
